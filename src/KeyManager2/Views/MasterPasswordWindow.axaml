<Window xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:potetofly25.KeyManager2.ViewModels"
        mc:Ignorable="d"
        x:Class="potetofly25.KeyManager2.Views.MasterPasswordWindow" 
        x:DataType="vm:MasterPasswordViewModel"
        Width="420" Height="260"
        Title="Set Master Password"
        WindowStartupLocation="CenterOwner">
    

    <Grid RowDefinitions="Auto,Auto,Auto,Auto,*" Margin="20">
        
        <TextBlock Text="Master Password" Grid.Row="0"
                   FontSize="16" Margin="0 0 0 10" />

        <!-- PasswordChar を使用した TextBox -->
        <TextBox Grid.Row="1"
                 Text="{Binding MasterPassword, Mode=TwoWay}"
                 Watermark="Enter master password"
                 Width="300"
                 PasswordChar="*"/>

        <TextBox Grid.Row="2"
                 Text="{Binding MasterPasswordConfirm, Mode=TwoWay}"
                 Watermark="Confirm password"
                 Width="300"
                 Margin="0,10,0,0"
                 PasswordChar="*"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
            <Button Content="OK"
                    Command="{Binding SetPasswordCommand}"
                    Width="100" />
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100" />
        </StackPanel>

        <!-- エラーメッセージ表示用 -->
        <TextBlock Text="{Binding ErrorMessage}" 
                   Foreground="Red"
                   Grid.Row="4"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"/>
    </Grid>

</Window>