<!-- 単一パスワード入力用のダイアログウィンドウ定義 -->
<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:potetofly25.KeyManager2.ViewModels"
    x:Class="potetofly25.KeyManager2.Views.SimplePasswordWindow"
    x:DataType="vm:SimplePasswordViewModel"
    Width="400" Height="180"
    Title="Enter Password"
    WindowStartupLocation="CenterOwner">

    <!-- 
        レイアウト用 Grid
        Row 0: 見出しテキスト
        Row 1: パスワード入力 TextBox
        Row 2: OK / Cancel ボタン
        Row 3: エラーメッセージ表示
        ※ RowDefinitions は 4 行分必要なので Auto を 4 つ定義
    -->
    <Grid RowDefinitions="Auto,Auto,Auto,Auto" Margin="20">

        <!-- ラベル（見出し） -->
        <TextBlock Text="Password"
                   Grid.Row="0"
                   FontSize="14"
                   Margin="0,0,0,10" />

        <!-- パスワード入力欄（伏字表示・TwoWay バインド） -->
        <TextBox Grid.Row="1"
                 Text="{Binding Password, Mode=TwoWay}"
                 Width="300"
                 PasswordChar="*"
                 Watermark="Enter password" />

        <!-- OK / Cancel ボタン行 -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    Spacing="10"
                    Margin="0,20,0,0">
            <!-- OK ボタン：パスワードを検証してウィンドウを閉じる -->
            <Button Content="OK"
                    Command="{Binding OkCommand}"
                    Width="100" />
            <!-- Cancel ボタン：入力をキャンセルしてウィンドウを閉じる -->
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100" />
        </StackPanel>

        <!-- エラーメッセージ表示（入力チェック失敗時など） -->
        <TextBlock Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   Grid.Row="3"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap" />
    </Grid>
</Window>
